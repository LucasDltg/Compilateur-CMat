int main()
{
    matrix A[3][4];
    A[0][0] = 1;
    A[0][1] = 2;
    A[0][2] = 3;
    A[0][3] = 4;
    A[1][0] = 5;
    A[1][1] = 6;
    A[1][2] = 7;
    A[1][3] = 8;
    A[2][0] = 9;
    A[2][1] = 10;
    A[2][2] = 11;
    A[2][3] = 12;

    // exemple de l'ennonc√©
    printmat(A[0..1][*]);
    printf("\n");
    printmat(A[0..1][2..3]);
}