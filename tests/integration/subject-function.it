Subject's example with functions
=========

matrix[2][2] invert(matrix A[2][2]) {
    matrix IA[2][2];
    IA = ~A;
    IA = IA[1;0][1;0];
    IA[0][1] = -IA[0][1];
    IA[1][0] = -IA[1][0];
    return IA;
}

float determinent(matrix A[2][2]) {
    return 1/(A[0][0]*A[1][1]-A[0][1]*A[1][0]);
}

void main() {
    matrix A[2][2]={{12,27},{64,42}}, IA[2][2], B[2]={1,8}, X[2];
    float det;

    /* Calcul de la matrice inverse de A */
    IA = invert(A);
    
    /* Calcul du déterminant de A */
    det = determinent(A);
    IA = det*IA;
    
    /* Calcul de X */
    X = IA*B;
    
    /* Affichage du résultat */
    printf("La solution de l'équation AX=B, avec A = ");
    printmat(A);
    printf("et B = ");
    printmat(B);
    printf("est X= ");
    printmat(X);
    printf("\n");
}

